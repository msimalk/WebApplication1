@page 
@model WebApplication5.Pages.Users.IndexModel
@{
}
<style>
    /* Tablo stilini düzenle */
    table {
        border-collapse: collapse;
        margin: 0 auto; /* Sayfanın ortasına hizalama */
    }

    th, td {
        border: 3px solid navy;
        color:black;
    }


    /* Tablo başlığını stilini düzenle */
    th {
        color: white;
